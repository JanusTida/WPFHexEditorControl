<Window x:Class="WPFHexaEditorExample.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hex="clr-namespace:HexTextBlock;assembly=HexTextBlock"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHexaEditorExample"
        mc:Ignorable="d"
        Title="MainWindow2" Height="300" Width="670">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" x:Name="MenuItem_OpenFile" Click="MenuItem_OpenFile_Click"/>
            </MenuItem>
        </Menu>
        <hex:HexTextBlockEditor Position="{Binding Position}" Grid.Row="1" x:Name="hexTbl" />
    </Grid>
</Window>
